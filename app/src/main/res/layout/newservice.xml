<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:title="SERAPP"
        android:elevation="1dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="end"
            android:paddingLeft="150dp"
            android:layout_alignTop="@+id/logout" />

        <ImageButton
        android:id="@+id/logout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="false"
        android:onClick="loggingOut"
        android:scaleType="fitCenter"
        android:background="@color/toolbar"
        android:src="@drawable/logout" />

    </android.support.v7.widget.Toolbar>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center_vertical"
        android:text="New Service"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@+id/custom_toolbar"
        android:layout_centerHorizontal="true" />

         <EditText
            android:id="@+id/vehicleNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="36dp"
            android:layout_toStartOf="@+id/btn_search"
            android:backgroundTint="@android:color/holo_red_light"
            android:ems="10"
            android:hint="Vehicle No."
            android:inputType="textNoSuggestions|textPersonName"
            android:textAlignment="center"
            android:textSize="14sp" />

         <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/vehicleNo"
            android:layout_alignTop="@+id/vehicleNo"
            android:layout_toEndOf="@+id/textView2"
            android:background="@drawable/rounded_edge"
            android:text="Search" />

    <TextView
        android:id="@+id/display1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/vehicleNo"
        android:layout_below="@+id/btn_search"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif"
        android:text="Customer Details"
        android:textColor="@color/subtitle"
        android:textStyle="bold" />

         <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/display1"
            android:layout_below="@+id/display1"
            android:layout_marginTop="12dp"
            android:gravity="left"
            android:text="Name" />

         <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView4"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="14dp"
            android:gravity="left"
            android:text="Contact No." />

         <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="Address" />

         <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView5"
            android:layout_toEndOf="@+id/display1"
            android:text="" />

         <TextView
            android:id="@+id/customer_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignStart="@+id/customer_name"
            android:layout_toEndOf="@+id/btn_search" />

         <TextView
            android:id="@+id/customer_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/customer_contact"
            android:layout_alignTop="@+id/textView6"
            android:layout_toEndOf="@+id/btn_search" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView5"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="42dp"
        android:fontFamily="sans-serif"
        android:text="Vehicle Info"
        android:textColor="@color/subtitle"
        android:textStyle="bold" />

         <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Vehicle No." />

         <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView11"
            android:layout_below="@+id/textView11"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="Engine No." />

         <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginTop="16dp"
            android:gravity="left"
            android:text="Color Code" />

         <TextView
            android:id="@+id/display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/customer_address"
            android:layout_alignTop="@+id/textView11"
            android:layout_toEndOf="@+id/btn_search" />

         <TextView
            android:id="@+id/engine_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView13"
            android:layout_alignStart="@+id/display" />

         <TextView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView13"
            android:layout_alignBottom="@+id/textView13"
            android:layout_alignStart="@+id/engine_no"
            android:textAlignment="textStart" />

         <Button
             android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/btn_search"
            android:layout_below="@+id/color"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edge"
            android:text="Next" />

         <ProgressBar
            android:id="@+id/progressBar2"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_search"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/toolbar"
            android:visibility="invisible" />


</RelativeLayout>

