<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:title="@string/title"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <ImageButton
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="end"
            android:adjustViewBounds="false"
            android:onClick="loggingOut"
            android:scaleType="fitCenter"
            android:background="@color/toolbar"
            android:src="@drawable/logout" />

        <TextView
            android:id="@+id/username1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:layout_marginEnd="11dp"
            android:layout_marginLeft="175dp"
            android:paddingLeft="100dp"
            android:layout_marginTop="17dp"
            android:gravity="right"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_toolbar"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="New Service"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cdisplay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/heading"
                    android:layout_below="@+id/heading"
                    android:layout_marginEnd="67dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="35dp"
                    android:text="Customer Details"
                    android:textColor="@color/subtitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/cdisplay1"
                    android:layout_below="@+id/cdisplay1"
                    android:layout_marginTop="17dp"
                    android:gravity="left"
                    android:text="Name" />

                <TextView
                    android:id="@+id/contactnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/name"
                    android:layout_below="@+id/name"
                    android:layout_marginTop="14dp"
                    android:gravity="left"
                    android:text="Contact No." />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/contactnum"
                    android:layout_below="@+id/contactnum"
                    android:layout_marginTop="16dp"
                    android:gravity="left"
                    android:text="Address" />

                <TextView
                    android:id="@+id/namedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/contactnum"
                    android:layout_marginStart="44dp"
                    android:layout_toEndOf="@+id/contactnum" />

                <TextView
                    android:id="@+id/contactdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/contactnum"
                    android:layout_alignBottom="@+id/contactnum"
                    android:layout_alignStart="@+id/namedata" />

                <TextView
                    android:id="@+id/addressdata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/contactdata"
                    android:layout_alignTop="@+id/address"

                    />

                <TextView
                    android:id="@+id/vehiclesub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/cdisplay1"
                    android:layout_below="@+id/address"
                    android:layout_marginTop="80dp"
                    android:text="Vehicle Info"
                    android:textColor="@color/subtitle"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/address"
                    android:layout_below="@+id/vehiclesub"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Vehicle No." />

                <TextView
                    android:id="@+id/enginenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView11"
                    android:layout_below="@+id/textView11"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Engine No." />

                <TextView
                    android:id="@+id/colorcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/enginenum"
                    android:layout_below="@+id/enginenum"
                    android:layout_marginTop="16dp"
                    android:gravity="left"
                    android:text="Color Code" />

                <TextView
                    android:id="@+id/vehicledata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/addressdata"
                    android:layout_alignTop="@+id/textView11"
                    android:layout_toEndOf="@+id/btn_search" />

                <TextView
                    android:id="@+id/enginedata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/colorcode"
                    android:layout_alignStart="@+id/vehicledata" />

                <TextView
                    android:id="@+id/colordata"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/colorcode"
                    android:layout_alignBottom="@+id/colorcode"
                    android:layout_alignStart="@+id/enginedata"
                    android:textAlignment="textStart" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>



</RelativeLayout>

