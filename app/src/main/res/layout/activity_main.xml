    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout">
        <ImageView
            android:id="@+id/photo_image_view"
            android:layout_width="309dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="42dp"
            android:foregroundGravity="center_vertical|center_horizontal|center"
            android:padding="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/relativeLayout"
            android:foregroundGravity="center"
            android:paddingBottom="50dp">

            <ProgressBar
                android:id="@+id/loginprogressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:indeterminateTint="@color/toolbar"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/clientUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:ems="10"
                android:foregroundGravity="center"
                android:hint="Username"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="96dp" />


            <EditText
                android:id="@+id/clientPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/clientUsername"
                android:layout_below="@+id/clientUsername"
                android:layout_marginTop="21dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:foregroundGravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="164dp" />

            <Spinner
                android:id="@+id/clientUsertype"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clientPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="21dp"
                android:foregroundGravity="center" />

            <Button
                android:id="@+id/login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/clientUsertype"
                android:layout_alignStart="@+id/clientUsertype"
                android:layout_below="@+id/clientUsertype"
                android:layout_marginTop="27dp"
                android:background="@drawable/rounded_edge"
                android:fontFamily="sans-serif-smallcaps"
                android:foregroundGravity="center"
                android:onClick="loggingIn"
                android:text="Login"
                android:textAlignment="center" />
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>
